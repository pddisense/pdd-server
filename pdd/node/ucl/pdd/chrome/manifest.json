{
  "manifest_version": 2,

  "name": "Private Data Donor",
  "short_name": "PDD",
  "description": "It connects researchers with volunteers. It monitors web searches in order to study the spread of infectious diseases such as flu.",
  "version": "0.6.15",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_security_policy": "script-src 'self' https://fonts.googleapis.com 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Private Data Donor"
  },

  "background": {
    "scripts": ["background.bundle.js"]
  },

  "permissions": [
    "history",
    "alarms",
    "storage"
  ]
}
